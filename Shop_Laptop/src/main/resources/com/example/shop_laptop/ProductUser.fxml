<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shop_laptop.productUser.Controller">

    <HBox alignment="CENTER" spacing="10">
        <!-- Logo hình tròn -->
        <Circle fx:id="logo" radius="35.0">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin></Circle>

        <!-- Khoảng trống để đẩy tiêu đề ra giữa -->
        <Region fx:id="leftSpacer" HBox.hgrow="ALWAYS" />

        <!-- Tiêu đề ở giữa -->
        <Text fx:id="groupName" fill="#d31616" style="-fx-font-size: 35px;" text="4P Tech Store">
            <font>
                <Font size="44.0" />
            </font>
        </Text>
        <Region fx:id="rightSpacer" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- HBox chứa MenuBar và điều chỉnh khoảng cách giữa các mục -->
    <HBox alignment="CENTER" spacing="20" style="-fx-font-size: 20">
        <MenuBar fx:id="menuAdmin" styleClass="menu" HBox.hgrow="ALWAYS">
            <Menu fx:id="productBtn" style="-fx-translate-x: 120; " text="Menu">
                <MenuItem text="Danh sách sản phẩm" />
            </Menu>
            <Menu fx:id="customerBtn" style="-fx-translate-x: 180; " text="Giỏ hàng">
                <MenuItem text="Danh sách sản phẩm" />
            </Menu>
            <Menu fx:id="orderBtn" style="-fx-translate-x: 230; " text="Thanh toán">
                <MenuItem text="Danh sách đơn hàng" />
            </Menu>
            <Menu fx:id="accountBtn" style="-fx-translate-x: 270; " text="Tài khoản">
                <MenuItem text="Đăng nhập" />
                <MenuItem text="Đăng xuất" />
            </Menu>
        </MenuBar>
    </HBox>
    <FlowPane fx:id="productA_flowpane" styleClass="flowpane-with-border" stylesheets="@../../../styles.css" VBox.vgrow="ALWAYS" />
</VBox>