<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600" prefWidth="1296.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shop_laptop.Account.AccountController">
    <HBox alignment="CENTER" spacing="10">
        <Circle radius="35.0" />
        <Region fx:id="leftSpacer" HBox.hgrow="ALWAYS" />
        <Text fill="black" style="-fx-font-size: 35px;" text="4P Tech Store">
            <font>
                <Font size="44.0" />
            </font>
        </Text>
        <Region fx:id="rightSpacer" prefHeight="70.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox alignment="CENTER" spacing="20" style="-fx-font-size: 20">
        <HBox HBox.hgrow="ALWAYS">
            <MenuBar styleClass="menu" HBox.hgrow="ALWAYS">
                <Menu style="-fx-translate-x: 120;" text="Sản phẩm">
                    <MenuItem text="Danh sách sản phẩm" />
                </Menu>
                <Menu style="-fx-translate-x: 180;" text="Khách hàng">
                    <MenuItem text="Quản lý khách hàng" />
                </Menu>
                <Menu style="-fx-translate-x: 230;" text="Đơn hàng">
                    <MenuItem text="Danh sách đơn hàng" />
                </Menu>
                <Menu style="-fx-translate-x: 270;" text="Tài khoản">
                    <MenuItem onAction="#GoToAccount" text="Tài Khoản của tôi" />
                    <MenuItem onAction="#logout" text="Đăng xuất" />
                </Menu>
            </MenuBar>
        </HBox>
    </HBox>

    <VBox alignment="CENTER">
        <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-translate-x: 300; -fx-translate-y: 0">
            <Label style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Thông tin cá nhân" />
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 30px;" text="Họ tên:          " />
                <Label fx:id="hoTen" prefHeight="30" prefWidth="400" text="Kiều Tấn Dũng">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 30px;" text="Số điện thoại:" />
                <Label fx:id="soDienThoai" prefHeight="30" prefWidth="400" text="0123456789">
                    <font>
                        <Font size="20.0" />
                    </font>
               <HBox.margin>
                  <Insets left="6.0" />
               </HBox.margin>
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 30px;" text="Email:            " />
                <Label fx:id="email" prefHeight="30" prefWidth="400" text="abcxyz@gmail.com">
                    <font>
                        <Font size="20.0" />
                    </font>
               <HBox.margin>
                  <Insets left="12.0" />
               </HBox.margin>
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-size: 30px;" text="Địa chỉ:         " />
                <Label fx:id="diaChi" prefHeight="30" prefWidth="400" text="Việt Nam">
                    <font>
                        <Font size="20.0" />
                    </font>
               <HBox.margin>
                  <Insets left="16.0" />
               </HBox.margin>
                </Label>
            </HBox>

      <Button mnemonicParsing="false" onAction="#edit" text="chỉnh sửa thông tin" />
        </VBox>
    </VBox>
</VBox>
