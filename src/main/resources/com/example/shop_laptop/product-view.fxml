<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shop_laptop.ProductController" spacing="20" padding="20">
    <Label text="Product Management" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: lightblue;"/>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Product Name" prefWidth="200"/>
        <TextField fx:id="priceField" promptText="Price" prefWidth="100"/>
        <TextField fx:id="quantityField" promptText="Quantity" prefWidth="100"/>
        <Button text="Add Product" onAction="#handleAddProduct" style="-fx-background-color: lightblue; -fx-text-fill: white; -fx-font-size: 16px;"/>
    </HBox>

    <TableView fx:id="productTable" prefWidth="800" prefHeight="400">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="300"/>
            <TableColumn fx:id="priceColumn" text="Price" prefWidth="200"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="200"/>
            <TableColumn fx:id="actionColumn" text="Actions" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
