<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shop_laptop.ShopController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <HBox alignment="CENTER" spacing="20">
        <Button text="Login" onAction="#showLogin" style="-fx-background-color: lightblue; -fx-text-fill: black; -fx-font-size: 18px; -fx-padding: 10px 20px;"/>
        <Button text="Product Management" onAction="#showProductManagement" style="-fx-background-color: lightblue; -fx-text-fill: black; -fx-font-size: 18px; -fx-padding: 10px 20px;"/>
    </HBox>
    <VBox fx:id="contentArea" alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
        <!-- Nội dung sẽ được thay thế bởi các view khác -->
    </VBox>
</VBox>
